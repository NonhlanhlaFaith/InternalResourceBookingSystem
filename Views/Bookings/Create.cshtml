@model InternalResourceBookingSystem.Models.Booking

@{
    ViewData["Title"] = "Create Booking";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Create" method="post" novalidate>
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <!-- Resource dropdown -->
    <div class="mb-3">
        <label asp-for="ResourceId" class="form-label"></label>
        <select asp-for="ResourceId" class="form-select" asp-items="ViewBag.Resources">
            <option value="">-- Select Resource --</option>
        </select>
        <span asp-validation-for="ResourceId" class="text-danger"></span>
    </div>

    <!-- StartTime -->
    <div class="mb-3">
        <label asp-for="StartTime" class="form-label"></label>
        <input asp-for="StartTime" class="form-control" type="datetime-local" />
        <span asp-validation-for="StartTime" class="text-danger"></span>
    </div>

    <!-- EndTime -->
    <div class="mb-3">
        <label asp-for="EndTime" class="form-label"></label>
        <input asp-for="EndTime" class="form-control" type="datetime-local" />
        <span asp-validation-for="EndTime" class="text-danger"></span>
    </div>

    <!-- BookedBy -->
    <div class="mb-3">
        <label asp-for="BookedBy" class="form-label"></label>
        <input asp-for="BookedBy" class="form-control" />
        <span asp-validation-for="BookedBy" class="text-danger"></span>
    </div>

    <!-- Purpose -->
    <div class="mb-3">
        <label asp-for="Purpose" class="form-label"></label>
        <input asp-for="Purpose" class="form-control" />
        <span asp-validation-for="Purpose" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-action="Index" class="btn btn-secondary ms-2">Cancel</a>
</form>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
